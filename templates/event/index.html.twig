{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/event.css') }}">
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

 {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
<div class="example-wrapper">
 <a href="{{ path('app_add_event') }}" class="back-link">Ajouter un événement</a>
    <div id="events" class="events">
        {% for event in events %}
                <div class="service-details">
                    <h3>{{ event.name }}</h3>
                     <p>{{ event.date|date('d/m/Y') }}</p> 
                      <p>{{ event.location }}</p>
                    <a href="{{ path('app_event', { 'id': event.id }) }}" class="btn btn-primary">Voir détails</a>
                </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
