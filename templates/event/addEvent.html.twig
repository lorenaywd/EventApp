{% extends 'base.html.twig' %}

{% block title %}Ajouter un événement{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/addEvent.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
     {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Ajouter un événement</h1>

        <section class="form-section">
            {{ form_start(form, {'attr': {'class': 'event-form'}}) }}

            <div class="form-group">
                {{ form_label(form.name, 'Nom de l\'événement') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.date, 'Date de l\'événement') }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>

            <div class="form-group">
                {{ form_label(form.location, 'Lieu de l\'événement') }}
                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.location) }}
            </div>

            <button type="submit" class="btn btn-primary">Ajouter l'événement</button>

            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}
