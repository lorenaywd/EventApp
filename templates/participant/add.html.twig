{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/addParticipant.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="text-center mb-4">Ajouter un participant pour l'événement : {{ event.name }}</h1>

        <section class="form-section">
            {{ form_start(form, {'attr': {'id': 'add-participant-form', 'class': 'needs-validation'}}) }}
                
            <div class="form-group">
                {{ form_label(form.name, 'Nom') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du participant'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'email du participant'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.address, 'Adresse') }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse du participant'}}) }}
                {{ form_errors(form.address) }}
            </div>

            <button type="submit" class="btn btn-primary" id="submit-button">Confirmer la participation</button>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}

        

